<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cervejaria</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">
        <div class="logo">
            @Html.ActionLink("Cervejaria", "Index", "Home")
        </div>
        <div class="navbar-links">
            <ul>
                <li>@Html.ActionLink("Cervejas", "Index", "Cerveja")</li>
                <li>@Html.ActionLink("Sobre", "Sobre", "Home")</li>
            </ul>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Wellington RA:101114 Unifev-Votuporanga</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
