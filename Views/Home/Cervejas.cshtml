
<h2>@ViewBag.Title.</h2>
<h3 class="badge bg-secondary">@ViewBag.Message</h3>


<p class="text-right" ><a class="btn btn-default" href="/Cerveja/Adicionar">Adiconar &raquo;</a> </p>
<br />
<table class="table table-success table-striped">

    <tr>

        <th>Nome</th>
        <th>Tipo</th>
        <th>Fabricação</th>
        <th> Cor</th>
        <th> Tipo de Embalagem</th>
        <th> Alcoolica</th>
        <th>Valor</th>
        <th>Ano</th>
        <th>Ação</th>
        <th>Ação</th>


    </tr>



    @foreach (var item in ViewBag.Lista)
    {
<tr>

    <td class="text-left">@item.Nome</td>
    <td class="text-left">@item.Tipo</td>
    <td class="text-left">@item.Fabricacao</td>
    <td class="text-left">@item.Cor</td>
    <td>@item.Embalagem</td>
    <td class="text-left">@item.Alcoolica</td>
    <td>@item.Valor</td>
    <td>@item.Ano</td>
    <td>  <a href="/Cerveja/Alterar/@item.Id">Alterar</a></td>
    <td>  <a href="/Cerveja/Excluir/@item.Id">Excluir</a></td>

</tr>
    }

</table>


